<%- include("../partials/header")%>

<div class="container">
    <h3 class="text-center">Edit Camp - <%= campground.name %></h3>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="url" value="<%= campground.image %>" name="campground[imgsrc]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.description %>" name="campground[desc]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Edit Camp</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
    
</div>

<%- include("../partials/footer") %>
