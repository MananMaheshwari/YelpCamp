<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the YelpCamp!!</h1>
            <p>View our handpicked campgrounds from all over the world xD</p>
            <a  class="btn btn-primary btn-large" href="campgrounds/new">Add new camp!!</a>
        </div>
        
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our top Camp Sites are !!!</h3>
        </div>

    </div>
    
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% campsites.forEach(function(campground){     %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h3> <%= campground.name %> </h3>  
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id%>" class="btn btn-warning">More Info</a>
                    </p>
                </div>    
            </div>
        <% }) %>

    </div>
    
</div>


<%- include("../partials/footer") %>

