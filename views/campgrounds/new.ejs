<%- include("../partials/header")%>

<div class="container">
    <h3 class="text-center">Add new Campground</h3>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Camp Name" name="name"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="url" placeholder="image url" name="imgsrc">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="desc">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Add Camp</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
    
</div>

<%- include("../partials/footer") %>
