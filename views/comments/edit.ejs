<%- include("../partials/header")%>

<div class="container">
    <h3 class="text-center">Edit Comment</h3>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campgroundID %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Add Comment</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
    
</div>

<%- include("../partials/footer") %>
